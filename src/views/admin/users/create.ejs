    <div class="form-buttons">
      <button type="button" class="btn btn-secondary" id="cancelBtn">
        Cancel
      </button>
      <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i> Create User
      </button>
    </div>
  </div>
</form>
